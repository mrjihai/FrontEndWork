<% include ./global/header.ejs %>
<% include ./global/nav.ejs %>
<div class="container pd-t-30">
	<div class="panel panel-default">
		<div class="page-header text-center">
			<h1><%=post.title%></h1>
		</div>
		<p class="info text-center">
			<span>Author：<a href="/u/<%= post.name %>"><%= post.name %></a></span>
			<span>Date：<%= post.time.minute %></span>
			<span><span class="glyphicon glyphicon-eye-open"></span><span class="orange">Read</span><% if(post.pv){ %>(<%=post.pv%>)<%}else{%>(0)<%}%></span>
			<span><span class="glyphicon glyphicon-comment"></span><span class="orange">Comment</span>(<%= post.comments.length %>)</span>
			<% if (user && (user.name == post.name)) { %>
	  		<span><a class="edit text-info" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><span class="glyphicon glyphicon-pencil"></span>Edit</a></span> |
  			<span><a class="remove text-danger" href="javascript:;" url="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" data-toggle="modal" data-target=".message"><span class="glyphicon glyphicon-remove-circle"></span>Delete</a></span>
			<% } %>
		</p>
		<p class="tags text-center">
		  	<% post.tags.forEach(function (tag, index) { %>
		    	<% if (tag) { %>
		      	<a class="label label-info" href="/tags/<%= tag %>"><%= tag %></a>
		    	<% } %>
		  	<% }) %>
		</p>
  		<div class="panel-body">
    		<%- post.post %>
    		<p class="postCopy"><span>Repost：</span><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a> - <a href="/" target="_blank">Mustang Blog</a></p>
  		</div>
  		<!-- <div class="panel-footer clearfix">
  			<span class="pull-left">上一篇：<a href="#" ></a></span>
  			<span class="pull-right">下一篇：<a href="#"></a></span>
  		</div> -->
  	</div>
</div>

<div class="modal fade message" tabindex="-1" aria-hidden="true" data-backdrop="static">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-body text-center"><h4></h4></div>
			<div class="modal-footer">
	        	<a class="btn btn-default" data-dismiss="modal">confirm</a>
	   		</div>
		</div>
	</div>
</div>
<%- include comment %>
<% include ./global/footer.ejs %>
